<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Title of Note">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/body"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="2"
            android:maxLength="200"
            android:layout_weight="0.8"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            tools:text='Body of note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al '>
        </TextView>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:focusable="false"
            android:text="@string/delete_button_label" />

    </LinearLayout>

</LinearLayout>
