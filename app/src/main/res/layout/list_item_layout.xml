<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="10"
            android:layout_gravity="center"
            android:src="@drawable/baseline_sticky_note_2_grey_800_18dp">
        </ImageView>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:text="Title of Note">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/body"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="2"
            android:maxLength="200"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:gravity="center_vertical"
            tools:text='Body of note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al note ipsum dolor et al '>
        </TextView>

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:text="DEL"
            android:drawableEnd="@drawable/baseline_delete_outline_grey_600_24dp"/>

    </LinearLayout>

</LinearLayout>
